<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2 d-inline">尋找更多美食餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keywords" class="form-control" placeholder="輸入餐廳 or 類別"
            aria-label="Restaurant Name..." aria-describedby="search-button" value="{{keywords}}" />
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
        <div class="text-end">
          <a href="./restaurants/new">
            <p class="fs-7 mt-2 mb-0 text-black-50"><small><i class="fa fa-square-plus"> 新增餐廳</i></small></p>
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">

        {{#each restaurantsData}}

        <div class="card mb-3">
          <a href="/restaurant/{{ this._id }}" class="text-secondary">
            <img class="card-img-top img-fluid" src="{{ this.image }}" alt="restaurant_img">
          </a>
          <div class="card-body p-3">
            <h6 class="card-title mb-1">{{ this.name }}</h6>

            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{ this.category }}
            </div>

            <div class="d-flex justify-content-end flex-wrap">
              <a href="/restaurant/{{ this._id }}/edit">
                <button class="btn btn-outline-secondary m-2">Edit</button>
              </a>
              <a href="/restaurant/{{ this._id }}" class="text-secondary">
                <button class="btn btn-outline-secondary m-2">Detail</button>
              </a>
              <form action="/restaurant/{{ this._id }}/delete" method="POST">
                <button type="submit" class="btn btn-danger m-2 text-white">
                  Delete
                </button>
              </form>
            </div>

            <span class="badge badge-pill badge-danger font-weight-normal">{{ this.rating }}
              <i class="fas fa-star fa-xs"></i>
            </span>

          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
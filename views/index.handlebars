<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner flex-column">
      <form action="/search" method="GET" class="border border-green">
        <h4 class="mb-2 text-center fw-bolder">尋找更多美食餐廳：</h4>
        <div class="input-group">
          <input type="text" value="{{keyword}}" name="keyword" class="form-control me-1" placeholder="輸入餐廳 or 類別"
            aria-label="Restaurant Name..." aria-describedby="search-button" />
          <div class="input-group-append d-inline-block">
            <button class="btn btn-major" type="submit" id="search-button">
              <i class="fas fa-search"></i>
            </button>
          </div>
        </div>
      </form>
      <div class="input-rightside d-flex justify-content-end">
        <div class="mt-2">
          <select class="form-select fs-7" id="sort" name="sort">
            <option selected>{{#if sortMethod}}{{sortMethod}}{{else}}Sort{{/if}}</option>
            <option>A > Z</option>
            <option>Z > A</option>
            <option>類別</option>
            <option>地區</option>
          </select>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">

        {{#each restaurantsData}}
        <div class="card mb-3">
          <a href="/restaurants/{{ this._id }}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top img-fluid" src="{{ this.image }}" alt="restaurant_img">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{ this.name }}</h6>

                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i> {{ this.category }}
                </div>

                <span class='badge rounded-pill text-bg-danger d-inlne-block '>
                  {{this.rating}}
                  <i class='fas fa-star fa-xs'></i>
                </span>
              </div>

              <div class="d-flex justify-content-end flex-wrap">
                <a href="/restaurants/{{ this._id }}/edit">
                  <button class="btn btn-outline-secondary m-2">Edit</button>
                </a>
                <a href="/restaurants/{{ this._id }}" class="text-secondary">
                  <button class="btn btn-outline-secondary m-2">Detail</button>
                </a>
                <form action="/restaurants/{{ this._id }}?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-danger m-2 text-white">
                    Delete
                  </button>
                </form>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
</div>